AT_SETUP([show info])
AT_KEYWORDS([virtual virtual04])
# Alternative databases: no mime
AT_CHECK([
DICOD_CONFIG([
capability mime;
database {
	name db1;
	handler "echo prefix=1";
	visible no;
}
database {
	name db2;
	handler "echo prefix=2";
	visible no;
}
database {
	name virt;
	handler virtual;
	database db1 mime;
	database db2 nomime;
}
])

AT_DATA([input],[show info virt
quit
])

DICOD_RUN],
[0],
[220
112 information for virt
ECHO database.

This database echoes each query.

.
250
221
])

AT_CLEANUP
